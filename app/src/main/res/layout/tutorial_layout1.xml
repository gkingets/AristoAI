<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/tutorial_1_image"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:layout_marginTop="100dp"
        android:src="@drawable/im_thanks"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Thanks for downloading!"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="@color/answer_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tutorial_1_image" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@id/tutorial_1_next_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <TextView
            android:layout_width="@dimen/tutorial_circle"
            android:layout_height="@dimen/tutorial_circle"
            android:layout_margin="@dimen/tutorial_circle_margin"
            android:background="@drawable/view_small_circle_false"/>
        <TextView
            android:layout_width="@dimen/tutorial_circle"
            android:layout_height="@dimen/tutorial_circle"
            android:layout_margin="@dimen/tutorial_circle_margin"
            android:background="@drawable/view_small_circle_true"/>
        <TextView
            android:layout_width="@dimen/tutorial_circle"
            android:layout_height="@dimen/tutorial_circle"
            android:layout_margin="@dimen/tutorial_circle_margin"
            android:background="@drawable/view_small_circle_true"/>
    </LinearLayout>

    <Button
        android:id="@+id/tutorial_1_next_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Next"
        android:textSize="20dp"
        android:padding="10dp"
        android:layout_marginBottom="30dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        android:background="@color/transparent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/history_list_expand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="50dp"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/history_list_flag_header_card"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:layout_marginLeft="3dp"
                android:backgroundTint="@color/md_theme_dark_outline"
                app:cardCornerRadius="30dp">
                <ImageView
                    android:id="@+id/history_list_flag_header"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:padding="3dp"
                    android:src="@drawable/ic_fix" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/history_list_question"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="-10dp"
                android:layout_weight="1"
                android:gravity="center|left"
                android:fontFamily="@string/font"
                android:textSize="18dp"
                android:text="Question" />

            <ImageView
                android:id="@+id/history_list_arrow"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:src="@drawable/ic_arrow_left"/>

        </LinearLayout>



            <LinearLayout
                android:id="@+id/history_list_answer_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="5dp"
                android:background="@color/transparent"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="@color/white_transparent"
                    android:orientation="horizontal">
                    <Space
                        android:layout_width="5dp"
                        android:layout_height="match_parent"/>
                    <TextView
                        android:layout_width="3dp"
                        android:layout_height="match_parent"
                        android:background="@color/md_theme_dark_outline"/>
                    <Space
                        android:layout_width="5dp"
                        android:layout_height="match_parent"/>
                    <TextView
                        android:id="@+id/history_list_answer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:text="abcde"
                        android:textSize="16dp"
                        android:visibility="gone"/>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/history_list_recycler_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/history_list_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:layout_gravity="center"
                        android:padding="3dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="3dp"
                        android:fontFamily="@string/font"
                        android:text="2022-01-01"
                        android:textSize="14dp"/>

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_star"/>

                    <TextView
                        android:id="@+id/history_list_point"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginLeft="3dp"
                        android:gravity="left"
                        android:padding="3dp"
                        android:fontFamily="@string/font"
                        android:text="4000"
                        android:textSize="14dp" />
                    <TextView
                        android:id="@+id/history_list_copy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="10dp"
                        android:paddingLeft="10dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:layout_marginLeft="5dp"
                        android:fontFamily="@string/font"
                        android:text="COPY ALL"
                        android:textSize="10dp"
                        android:background="@drawable/view_question_corner"/>
                </LinearLayout>
            </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/md_theme_dark_onBackground"/>

    </LinearLayout>





</androidx.constraintlayout.widget.ConstraintLayout>